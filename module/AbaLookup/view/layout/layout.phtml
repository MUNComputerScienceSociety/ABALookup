	<body>
		<header class="header alternate">
			<div class="row">
				<div class="twelve columns">
					<a href="/">
						<h1 class="four columns logo alternate">ABA Lookup</h1>
					</a>
					<?php if (isset($this->user)): ?>
					<nav class="eight columns navigation">
						<ul class="text-center clearfix">
						<?php
							$id = $this->user->getId();
							$pages = ['Profile', 'Schedule', 'Matches'];
							foreach ($pages as $page) {
								echo sprintf(
									'<li>%s</li>',
									$this->anchor($page, sprintf('/users/%d/%s', $id, strtolower($page)))
								);
							}
						?>
							<li><a href="/users/logout">Logout</a></li>
						</ul>
					</nav>
					<?php endif; ?>
				</div>
			</div>
		</header>
		<div class="main alternate">
			<div class="row">
				<?php echo $this->content; ?>
			</div>
		</div>
